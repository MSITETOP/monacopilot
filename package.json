{
  "name": "next-tour-root",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=next-tour",
    "dev": "npm run dev --workspace=website",
    "build:website": "npm run build --workspace=website",
    "lint": "npm run lint --workspace=next-tour && npm run lint --workspace=website",
    "test": "npm run test --workspace=next-tour",
    "format": "prettier '**/*.{js,jsx,ts,tsx,json,md,mdx,css,scss,yaml,yml}' --write",
    "prepare-release": "changeset",
    "version-package": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md,mdx,css,scss,yaml,yml}": [
      "prettier --write",
      "npm run lint"
    ]
  }
}
