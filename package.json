{
  "name": "rich-monaco-editor",
  "version": "0.7.0",
  "description": "Extended Monaco Editor with AI auto-completion, suggestions, and new themes for React.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsup src/index.ts",
    "dev:test": "pnpm -C test dev",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:test": "pnpm -C test lint",
    "format": "prettier --write .",
    "checks": "pnpm type-check && pnpm lint && pnpm lint:test",
    "release": "pnpm build && pnpm checks && changeset && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/node": "^20",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "groq-sdk": "^0.3.2",
    "monaco-editor": "^0.47.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3"
  },
  "keywords": [
    "monaco",
    "monaco-editor",
    "react-monaco-editor",
    "ai-monaco-editor",
    "rich-monaco-editor",
    "monaco-editor-react",
    "ai-editor"
  ],
  "homepage": "https://github.com/arshad-yaseen/rich-monaco-editor#readme",
  "license": "MIT",
  "author": "Arshad Yaseen <m@arshadyaseen.com>",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0"
  }
}
